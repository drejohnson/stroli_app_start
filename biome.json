{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["app/**/*.{ts, tsx}", "test/**/*.{ts, tsx}"],
    "ignore": ["node_modules"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["node_modules"]
  }
}
